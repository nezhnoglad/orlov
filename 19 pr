#include <iostream>
#include <cstdlib> 

using namespace std;

void clearConsole() {
    
#ifdef _WIN32
    system("cls");
#else
    system("clear");
#endif
}

int main() {
    setlocale(0, "");
    int size;
    char texture;

    cout << "[ + ] Фигура: \"Ромб\"\n";
    cout << "[ + ] Размер: \t";
    cin >> size;

    if (size <= 0 || size % 2 == 0) {
        cout << "Ошибка: размер должен быть положительным **нечётным** числом.\n";
        return 1;
    }

    cout << "[ + ] Текстура: \t";
    cin >> texture;

    clearConsole();

    cout << "[ + ] Фигура: \"Ромб\"\n";
    cout << "[ + ] Результат:\n\n";

    int mid = size / 2; 

    for (int i = 0; i < size; ++i) {
        for (int j = 0; j < size; ++j) {
          

            if (abs(j - mid) + abs(i - mid) == mid) {
                cout << texture << "\t";
            }
            else {
                cout << ".\t";
            }
        }
        cout << "\n";
    }

    return 0;
}
